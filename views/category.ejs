<!DOCTYPE html>
<html lang="pt-br">
<head>
    <%- include('./partials/header.ejs') %>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Categoria | <%= category.title %></title>
</head>
<body>
    <%-include('./partials/homenavbar.ejs') %>
    <div class="container mt-5">
        <h2 class="mb-3">Ãšltimos artigos sobre <%= category.title %></h2>
        <% article.forEach(article=>{ %>
            <div class="card border border-warning mb-4">
                <div class="card-header bg-warning text-dark border-0">
                    <h3><%= article.title %></h3>
                </div>
                <div class="card-body bg-dark border border-warning">
                    <a href="/<%= article.slug %>" class="btn btn-outline-warning">Ver artigo</a>
                </div>
            </div><br>
        <% }) %>
    </div>
</body>
</html>