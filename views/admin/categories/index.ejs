<!DOCTYPE html>
<html lang="pt-br">
<head>
    <%- include('../../partials/header.ejs') %>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Categorias</title>
</head>
<body>
    <%- include('../../partials/navbar.ejs') %>
    <div class="container mt-5">
        <div class="row">
            <div class="col">
                <h4>Categorias</h4>
            </div>
            <div class="col d-flex justify-content-end">
                <a href="/admin/categories/new" class="btn btn-sm btn-outline-success">Nova Categoria</a>
            </div>
        </div>
        <hr>
        <table class="table border-0">
            <thead class="bg-warning text-dark  border border-warning w-100">
                <tr>
                    <th class="border-0">
                        ID
                    </th>
                    <th class="border-0">
                        Título
                    </th>
                    <th class="border-0">
                        Slug
                    </th>
                    <th class="border-0">
                        Ações
                    </th>
                </tr>
            </thead>
            <tbody class="border-0 bg-dark text-light">
                <% categories.forEach(category => { %>
                    <tr>
                        <th class="border border-warning">
                            <%= category.id %>
                        </th>
                        <th class="border border-warning">
                            <%= category.title %>
                        </th>
                        <th class="border border-warning">
                            <%= category.slug %>
                        </th>
                        <th class="col border border-warning w-10 align-middle">
                            <a href="/admin/categories/edit/<%= category.id %>" class="w-100 btn btn-sm btn-outline-warning mr-3">Editar</a>
                            <form action="/categories/delete" method="post" onsubmit="confirmDelete(event)">
                                <input type="hidden" name="id" value="<%= category.id %>"/>
                                <button type="submit" class="btn btn-sm btn-outline-danger w-100 mt-2">Deletar</button>
                            </form>
                        </th>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    </div>
</body>
<script>
    const confirmDelete = (event) => {
        event.preventDefault()
        confirm('Deseja realmente deletar esta categoria?') ? event.target.submit() : window.location.reload()
    }
</script>
</html>