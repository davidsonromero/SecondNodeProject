<!DOCTYPE html>
<html lang="pt-br">
<head>
    <%- include('../../partials/header.ejs') %>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Davidson’s Blog</title>
</head>
<body>
    <%-include('../../partials/homenavbar.ejs') %>
    <div class="container mt-5">
        <h2 class="mb-3">Últimos Artigos</h2>
        <% result.articles.rows.forEach(article=>{ %>
            <div class="card border border-warning mb-4">
                <div class="card-header bg-warning text-dark border-0">
                    <h3><%= article.title %></h3>
                </div>
                <div class="card-body bg-dark border border-warning">
                    <a href="/article/<%= article.slug %>" class="btn btn-outline-warning">Ver artigo</a>
                </div>
            </div><br>
        <% }) %>
        <div class="row mb-5">
            <% if(result.previous){ %>
                <div class="col">
                    <a href="<%= result.page - 1 %>" class="btn btn-outline-secondary">Anterior</a>
                </div>
            <% } %>
            <% if(result.next){ %>
                <div class="col d-flex justify-content-end">
                    <a href="<%= result.page + 1 %>" class="btn btn-outline-secondary">Próximo</a>
                </div>
            <% } %>
        </div>
    </div>
</body>
</html>